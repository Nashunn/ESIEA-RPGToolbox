<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".view.DiceActivity">

    <TextView
        android:id="@+id/diceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diceText"
        android:textAlignment="center"
        android:textColor="#333333"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/diceValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/diceValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diceValue"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="36sp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fr.nashunn.rpg_toolbox.view.DrawDice
        android:id="@+id/diceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

</android.support.constraint.ConstraintLayout>